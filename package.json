{
  "name": "authenticated-potato",
  "version": "1.0.0",
  "description": "Just an authenticated potato",
  "main": "server/index.ts",
  "engines": {
    "node": "16.14.2",
    "npm": "8.5.0"
  },
  "scripts": {
    "build": "npx tsc -p ./tsconfig.json && npx tsc -p ./client/tsconfig.json && cp client/index.html dist/client/index.html",
    "dev": "concurrently \"nodemon server/index.ts\" \"npm run generate -- --watch\"",
    "generate": "graphql-codegen --config codegen.yml",
    "test": "jest",
    "codegen": "graphql-codegen --config codegen.yml",
    "prettier-check": "prettier --check ./server ./client",
    "prettier-fix": "prettier --write ./server ./client"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pierroberto/authenticated-potato.git"
  },
  "author": "Pier Roberto Lucisano",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/pierroberto/authenticated-potato/issues"
  },
  "homepage": "https://github.com/pierroberto/authenticated-potato#readme",
  "dependencies": {
    "apollo-server": "^3.10.2",
    "apollo-server-core": "^3.10.2",
    "apollo-server-express": "^3.10.2",
    "concurrently": "^7.4.0",
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "graphql": "^16.6.0",
    "mongoose": "^6.6.1"
  },
  "devDependencies": {
    "@babel/core": "^7.19.1",
    "@babel/preset-env": "^7.19.1",
    "@babel/preset-typescript": "^7.18.6",
    "@graphql-codegen/cli": "2.13.0",
    "@graphql-codegen/introspection": "2.2.1",
    "@graphql-codegen/typescript": "2.7.3",
    "@graphql-codegen/typescript-resolvers": "2.7.3",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.0.3",
    "@types/node": "^18.7.16",
    "babel-jest": "^29.0.3",
    "eslint": "^8.24.0",
    "jest": "^29.0.3",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3"
  }
}
